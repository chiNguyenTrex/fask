<% end %>

<% if @support.post_of_work_space(Settings.topic.type_sort.no_answer)[:count_posts] > Settings.paginate_default %>
  $('.no-answer-pagination').html(
    '<%= j(render("topics/view_all", type: Settings.topic.type_sort.no_answer, work_space_id: @support.get_work_space.try(:id))) %>'
  ).show();
<% else %>
  $('.no-answer-pagination').hide();
<% end %>
