$('.location-dropbtn').html('<%= @support.get_work_space.try(:name) ? @support.get_work_space.try(:name) : t("all_location") %>');

$('.newest').html(
  '<%= j(render("topics/post", posts: @support.post_of_work_space(Settings.topic.type_sort.recently)[:posts], type: Settings.topic.type_sort.recently)) %>'
);
$('.popular').html(
  '<%= j(render("topics/post", posts: @support.post_of_work_space(Settings.topic.type_sort.popular)[:posts], type: Settings.topic.type_sort.popular)) %>'
);
$('.answer').html(
  '<%= j(render("topics/post", posts: @support.post_of_work_space(Settings.topic.type_sort.recently_answer)[:posts], type: Settings.topic.type_sort.recently_answer)) %>'
);
$('.no_answer').html(
  '<%= j(render("topics/post", posts: @support.post_of_work_space(Settings.topic.type_sort.no_answer)[:posts], type: Settings.topic.type_sort.no_answer)) %>'
);
<% if @support.post_of_work_space(Settings.topic.type_sort.recently)[:count_posts] > Settings.paginate_default %>
  $('.newest-pagination').html(
    '<%= j(render("topics/view_all", type: Settings.topic.type_sort.recently, work_space_id: @support.get_work_space.try(:id))) %>'
  ).show();
<% else %>
  $('.newest-pagination').hide();
<% end %>
<% if @support.post_of_work_space(Settings.topic.type_sort.popular)[:count_posts] > Settings.paginate_default %>
  $('.popular-pagination').html(
    '<%= j(render("topics/view_all", type: Settings.topic.type_sort.popular, work_space_id: @support.get_work_space.try(:id))) %>'
  ).show();
<% else %>
  $('.popular-pagination').hide();
<% end %>
<% if @support.post_of_work_space(Settings.topic.type_sort.recently_answer)[:count_posts] > Settings.paginate_default %>
