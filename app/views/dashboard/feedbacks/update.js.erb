<% if @success %>
  <% if @post.status == Settings.version.accept %>
    swal(I18n.t('posts.status.accept_success'),'','info');
    $('.feedback-<%= @post.id %>').removeClass('feedback-color-0 feedback-color-2')
      .addClass('feedback-color-1');
  <% elsif @post.status == Settings.a_version_reject %>
    swal(I18n.t('posts.status.reject_success'),'','info');
    $('.feedback-<%= @post.id %>').removeClass('feedback-color-0 feedback-color-1')
      .addClass('feedback-color-2');
  <% else %>
    $('.feedback-<%= @post.id %>').removeClass('feedback-color-1 feedback-color-2')
      .addClass('feedback-color-0');
  <% end %>
<% else %>
  swal(I18n.t('update_error'),'','danger');
<% end %>
